general {
  output_format = "i3bar"
}

order += "volume master"
order += "battery 0"
order += "tztime new_york"

volume master {
  format = "VOL %volume"
  format_muted = "muted (%volume)"
  device = "pulse"
}

battery 0 {
  format = "%status %percentage"
}

tztime new_york {
  format = "%m-%d-%Y %H:%M %p"
  timezone = "America/New_York"
}
